<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CompararPalabra"
    tools:openDrawer="start">

    <com.google.android.material.navigation.NavigationView

        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header2"
        app:menu="@menu/main_menu2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="193dp"
                android:layout_height="46dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="81dp"
                android:fontFamily="@font/montserrat"
                android:text="Lista de Palabras:"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/botonEscucharPalabra"
                app:layout_constraintEnd_toStartOf="@+id/spinner4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="142dp"
                android:layout_height="47dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                app:layout_constraintBottom_toTopOf="@+id/botonEscucharPalabra"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                app:layout_constraintTop_toBottomOf="@+id/spinner3" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar6"
                android:layout_width="0dp"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:maxHeight="?attr/actionBarSize"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_baseline_menu_24">

                <TextView
                    android:id="@+id/toolbar_title_CompararPalabra"
                    android:layout_width="wrap_content"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Comparar Palabra"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    tools:layout_editor_absoluteX="155dp"
                    tools:layout_editor_absoluteY="7dp" />

            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="0dp"
                android:layout_height="116dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="28dp"
                android:fontFamily="@font/montserrat"
                android:text="Seleccione un fonema y una palabra de las listas, escuche la pronunciación, grábese y compare."
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/spinner3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar6"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/botonEscucharPalabra"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:layout_marginStart="79dp"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="79dp"
                android:background="@drawable/botones"
                android:fontFamily="@font/montserrat_bold"
                android:text="Escuchar Palabra"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/botonGrabar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/spinner4" />

            <Button
                android:id="@+id/botonGrabar"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:layout_marginStart="79dp"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:background="@drawable/botongrabar"
                android:fontFamily="@font/montserrat_bold"
                android:text="Grabar"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonEscucharPalabra" />

            <Button
                android:id="@+id/botonEscucharme"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:layout_marginStart="79dp"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/botoningresar"
                android:fontFamily="@font/montserrat_bold"
                android:text="Escucharme"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonGrabar" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="191dp"
                android:layout_height="45dp"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/montserrat"
                android:text="Lista de Fonemas:"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/spinner3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="105dp"
                android:layout_height="46dp"
                android:layout_marginStart="68dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:gravity="center_horizontal|center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <Button
                android:id="@+id/botonParar"
                android:layout_width="252dp"
                android:layout_height="48dp"
                android:layout_marginStart="79dp"
                android:layout_marginLeft="79dp"
                android:layout_marginTop="79dp"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="79dp"
                android:background="@drawable/botongrabar"
                android:fontFamily="@font/montserrat_bold"
                android:text="Parar"
                android:textColor="#FFFFFF"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/botonEscucharme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/botonEscucharPalabra" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>